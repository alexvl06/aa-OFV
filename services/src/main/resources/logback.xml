<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%date{ISO8601} %-5level %logger{36} %X{sourceThread} - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="akka.remote.EndpointWriter" level="OFF"/>
    <logger name="spray.can.server.HttpServerConnection" level="OFF" />

    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <!--See also http://logback.qos.ch/manual/appenders.html#RollingFileAppender-->
        <!--File>../log/fiduciaria_alianza_admin_%{pid}.log</File-->
        <File>log/alianza_fiduciaria_aa.log</File>
        <!--encoder>
            <pattern>%date{ISO8601} %-5level %logger{36} %X{sourceThread} - %msg%n</pattern>
        </encoder-->
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!--maxHistory>30</maxHistory-->
            <!--FileNamePattern>../log/fiduciaria_alianza_aa.%d{yyyy-MM-dd}.%i.log</FileNamePattern-->
            <!--FileNamePattern>../log/fiduciaria_alianza_aa.%d{yyyy-MM-dd-a}-%{pid}.log</FileNamePattern-->
            <FileNamePattern>log/alianza_fiduciaria_aa_%d{yyyy-MM-dd-a}.log</FileNamePattern>
            <!--FileNamePattern>../log/fiduciaria_alianza_aa.%d{yyyy-MM-dd_HH-mm}-%jvm.log</FileNamePattern-->
        </rollingPolicy>
        <layout class="ch.qos.logback.classic.PatternLayout">
            <Pattern>%date{ISO8601} %-5level %logger{36} %X{sourceThread} - %msg%n</Pattern>
        </layout>
    </appender>

    <logger name="spray.can.server" level="ERROR"/>

    <root level="INFO">
        <appender-ref ref="FILE" />
        <appender-ref ref="STDOUT" />
    </root>



</configuration>